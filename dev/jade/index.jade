- var leftMenuLvl_1          = ['iPhone', 'iPad', 'iMac',  'MacBook',  'iPod',  'Другое']
- var leftMenuLvl_2          = ['iPhone 4s', 'iPhone 5', 'iPhone 5s с экслюзивным дизайном', 'iPhone 6', 'iPhone 6plus']
- var breadcrumbs            = ['Главная', 'Каталог']

- var catalog           = []
- var catalog_item_1    = {'img': '../img/display.png', 'title': 'Apple Thunderbolt Display 27"'}
- var catalog_item_2    = {'img': '../img/imac.png', 'title': 'Apple iMac 27"'}
- var catalog_item_3    = {'img': '../img/iphone.png', 'title': 'iPhone 5s Gold'}
- var catalog_item_4    = {'img': '../img/ipad.png', 'title': 'iPad Air Wi-Fi + Cellular 128GB - Silver'}
- var catalog_item_5    = {'img': '../img/ipod.png', 'title': 'Apple iPod nano 7G 16 ГБ Blue'}
- var catalog_item_6    = {'img': '../img/router.png', 'title': 'Роутер Wi-Fi Apple AirPort Extreme Base Station'}
