- catalog.push(catalog_item_1); catalog.push(catalog_item_2);catalog.push(catalog_item_3); catalog.push(catalog_item_4); catalog.push(catalog_item_5); catalog.push(catalog_item_6);

- var pagination    = ['1', '2', '3', '4', '5', 'Все']
- var layouttypes   = ['Сеткой', 'Линиями']
- var phone_code    = "+7921"
- var phone_val     = "3221232"
- var email         = "manager@company.com"

html
    head
        title dz-shop

        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")


        meta(name="description", content="loftschool_homework")
        meta(name="keywords", content="loftschool_homework")
        meta(name="author", content="Gomer Simpson")

        // bower:css
        // endbower

        // bower:js
        // endbower

    body
        .wrapper
            header.header
                .container
                    a.header__in-logo(href="/")
                        img(src="../img/header-logo.png" alt="")
                        | header logo text
                    .header__in-contacts
                        a.header__in-contacts__phone(href="#{phone_code}#{phone_val}")
                            span.header__in-contacts__phone-code= phone_code
                            |#{phone_val}

                        a.header__in-contacts__email(href="#{email}") #{email}

            .content
                .container

                    ul.topcatalog
                        each item, index in topCatalog
                            li.topcatalog__item
                                if(item.current)
                                    a.topcatalog__item-link(href="#", class="#{item.current}")= item.name
                                else
                                    a.topcatalog__item-link(href="#")= item

                    .navline-wp.clearfix
                        if breadcrumbs.length
                            ul.breadcrumbs
                                each item, index in breadcrumbs
                                    li.breadcrumbs__item
                                        if index == breadcrumbs.length-1
                                            span.breadcrumbs__item-last= item
                                        else
                                            a.breadcrumbs__item-link(href="")= item

                        if layouttypes.length
                            select.layouttypes
                                each item, index in layouttypes
                                    if index == 0
                                        option.layouttypes__item(selected="selected")= item
                                    else
                                        option.layouttypes__item= item

                        if pagination.length
                            select.pagination
                                each item, index in pagination
                                    if index == 0
                                        option.pagination__item.current= item
                                    else
                                        option.pagination__item= item

                    aside.content__left
                        if leftMenuLvl_1.length
                            ul.leftmenu
                                each item_1, index in leftMenuLvl_1
                                    li.leftmenu__item
                                        a.leftmenu__item-link(href="#")=item_1

                                        if index == 0
                                            if leftMenuLvl_2.length
                                                ul.leftmenu
                                                    each item_2, index in leftMenuLvl_2
                                                        li.leftmenu__item
                                                            a.leftmenu__item-link(href="#")=item_2

                    .content__right
                        if catalog.length
                            .catalog
                                each item, index in catalog
                                    .catalog__item
                                        .catalog__item-img-wp
                                            img.catalog__item-img(src="#{item.src}" alt="")
                                        a.catalog__item-link(href="#")=item.title

                                        ul.catalog__itemprops
                                            each prop, p_index in catalog_item_desc
                                                li.catalog__itemprops-item
                                                    span.catalog__itemprops-item-key #{prop.key}:
                                                    if p_index == catalog_item_desc.length-1
                                                        span.catalog__itemprops-item-val #{prop.val} #{p_index} #{catalog_item_desc.length}
                                                    else
                                                        span.catalog__itemprops-item-val #{prop.val}, #{p_index} #{catalog_item_desc.length}

            footer.footer
                .container
                    a.footer__logo(href="link")
                        img(src="../img/footer-logo.png" alt="")
                        | footer logo text

                    .footer__menu
                        each menulist in footerMenu2
                            ul.footer_menu__list
                                each menuitem, i in menulist
                                    li.footer__menu__item
                                        if(i == 1)
                                            span.footer__menu__item-title= menuitem
                                        else
                                            a.footer__menu__item-link(href="#")= menuitem
                    .footer__links
                        ul.footer__links__app-stores
                            each item in footerLinksApp
                                li.footer__links__app-stores__item
                                    a.footer__links__app-stores__item-link(href="#{item.href}" class="#{item.class}")=item.text
                        ul.footer__links__soc
                            each item in footerLinksSoc
                                li.footer__links__soc__item
                                    a.footer__links__soc__item-link(href="#{item.href}" class="#{item.class}")=item.text


