    body
        .wrapper
            .main-content
                header.header
                    .container
                        a.header__in-logo(href="/")
                            img(src="img/logo-header.png" alt="")
                            | header logo text
                        .header__in-contacts
                            a.header__in-contacts__phone(href="tel:#{phone_code}#{phone_val}")
                                span.header__in-contacts__phone-code= phone_code
                                |#{phone_val}
                            br
                            a.header__in-contacts__email(href="#{email}") #{email}

                .content
                    .container

                        ul.topcatalog
                            each item, index in topCatalog
                                if(item.current)
                                    li.topcatalog__item(class="#{item.current}")
                                        a.topcatalog__item-link(href="#")
                                            span.topcatalog__item-link-in= item.name
                                else
                                    li.topcatalog__item
                                        a.topcatalog__item-link(href="#")
                                            span.topcatalog__item-link-in= item

                        .navline-wp.clearfix
                            if breadcrumbs.length
                                ul.breadcrumbs
                                    each item, index in breadcrumbs
                                        li.breadcrumbs__item
                                            if index == breadcrumbs.length-1
                                                span.breadcrumbs__item-last= item
                                            else
                                                a.breadcrumbs__item-link(href="")= item
                            if pagination.length
                                ul.pagination
                                    each item, index in pagination
                                        if index == 0
                                            li.pagination__item.current
                                                span.pagination__item-link= item
                                        else
                                            li.pagination__item
                                                a.pagination__item-link(href="#")= item



                            select.layouttypes
                                each item, index in layouttypes
                                    if index == 0
                                        option.layouttypes__item(selected="selected" value="#{item.value}")= item.txt
                                    else
                                        option.layouttypes__item(value="#{item.value}")= item.txt

                        aside.content__left
                            if leftMenuLvl_1.length
                                ul.leftmenu
                                    each item_1, index in leftMenuLvl_1
                                        if index == 0
                                            li.leftmenu__item.current
                                                a.leftmenu__item-link(href="#")=item_1
                                                if leftMenuLvl_2.length
                                                    ul.leftmenu-lvl2
                                                        each item_2, index in leftMenuLvl_2
                                                            li.leftmenu-lvl2__item
                                                                a.leftmenu-lvl2__item-link(href="#")=item_2
                                        else
                                            li.leftmenu__item
                                                a.leftmenu__item-link(href="#")=item_1


                        .content__right
                            if catalog.length
                                ul.catalog
                                    each item, index in catalog
                                        li.catalog__item.clearfix
                                            .catalog__item-in
                                                .catalog__item-img-wp
                                                    img.catalog__item-img(src="#{item.img}" alt="")

                                                .catalog__item-data
                                                    a.catalog__item-link(href="#")=item.title

                                                    ul.catalog__itemprops
                                                        each prop, p_index in catalog_item_desc
                                                            li.catalog__itemprops-item
